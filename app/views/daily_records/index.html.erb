<h1>Daily Records Report</h1>
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Male Count</th>
      <th>Female Count</th>
      <th>Male Avg Age</th>
      <th>Female Avg Age</th>
    </tr>
  </thead>
  <tbody>
    <% @daily_records.each do |record| %>
      <tr>
        <td><%= record.date.strftime("%Y-%m-%d") %></td>
        <td><%= record.male_count %></td>
        <td><%= record.female_count %></td>
        <td><%= record.male_avg_age %></td>
        <td><%= record.female_avg_age %></td>
      </tr>
    <% end %>
  </tbody>
</table>